				"Therefore, we recommend that you make your designs without any AI assistance to ensure consistency " +
				"and reliability."
		},
	];
	(EventCallback, string)[] ReportCallbacks =>
	[
		(EventCallback.Factory.Create(this, new Action(async () => await JSRuntime.InvokeVoidAsync("open", "https://officialaptivi.wordpress.com/contact/", "_blank"))), "Contact us")
	];
	(EventCallback, string)[] ReportCallbacksAgreed =>
	[
		(EventCallback.Factory.Create(this, new Action(async () => await JSRuntime.InvokeVoidAsync("open", "https://github.com/Aptivi/Branding/releases/tag/260212", "_blank"))), "Download"),
		.. ReportCallbacks
	];
}
