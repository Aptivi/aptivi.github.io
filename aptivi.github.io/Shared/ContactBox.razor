@inject NavigationManager NavManager

<div class="alert alert-secondary mt-4">
    <span class="oi oi-chat me-2" aria-hidden="true"></span>
    <strong>@Title</strong>
    <br />
    <br />
    <span class="text-nowrap">
        @Description
    </span>
    <br />
    <br />
    <button class="btn btn-primary" @onclick="@(e => NavManager.NavigateTo($"https://github.com/Aptivi"))"><span class="fa-brands fa-github" aria-hidden="true" /></button>
    <button class="btn btn-primary" @onclick="@(e => NavManager.NavigateTo($"https://discord.gg/MmFBajJmnT"))"><span class="fa-brands fa-discord" aria-hidden="true" /></button>
    <button class="btn btn-primary" @onclick="@(e => NavManager.NavigateTo($"https://matrix.to/#/#aptivi-official:matrix.org"))"><span class="fa-brands fa-hubspot" aria-hidden="true" /></button>
    <button class="btn btn-primary" @onclick="@(e => NavManager.NavigateTo($"https://fosstodon.org/@@aptivi"))"><span class="fa-brands fa-mastodon" aria-hidden="true" /></button>
    <button class="btn btn-primary" @onclick="@(e => NavManager.NavigateTo($"https://www.linen.dev/s/aptivi"))"><span class="fa fa-comment" aria-hidden="true" /></button>
</div>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Description { get; set; }
}
