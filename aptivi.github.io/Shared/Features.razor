@using aptivi.github.io.Data

@if (FeatureArray is not null)
{
	<div class="general-container">
		<div class="container-fluid">
			<div class="row g-3 g-md-4 row-cols-1 row-cols-xl-2">
				@foreach (var feature in FeatureArray)
				{
					<div class="col text-center p-2 p-md-5">
						<div class="icon-square d-inline-flex align-items-center justify-content-center flex-shrink-0 my-3 my-md-5">
							<span class="@feature.IconClass" aria-hidden="true" />
						</div>
						<h3 class="fs-1">@feature.Title</h3>
						<p class="py-0 px-0 px-md-2 py-md-2">@feature.Description</p>
						<div class="d-grid gap-2 d-sm-flex justify-content-center flex-wrap px-2">
							@if (@feature.Buttons is not null)
							{
								@foreach (var button in @feature.Buttons)
								{
									<button class="btn btn-primary" type="button" @onclick="@button.Item1">@button.Item2</button>
								}
							}
						</div>
					</div>
				}
			</div>
		</div>
	</div>
}

@code {
	[Parameter]
	public FeatureDescriptor[] FeatureArray { get; set; }
}
